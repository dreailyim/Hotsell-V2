
{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src/functions.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "src/app",
    "src/components",
    "src/hooks",
    "src/lib"
  ]
}
