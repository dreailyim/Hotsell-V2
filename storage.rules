rules_version = '2';

// By default, allow public read access for all files.
// This is common for profile pictures and product images.
// Write access is restricted to authenticated users to prevent unauthorized uploads.
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }
  }
}
